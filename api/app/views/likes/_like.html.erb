<% if portfolio.liked_by?(current_user) %>
   <%= link_to(portfolio_dislike_path(portfolio), method: :delete, remote: true, id: :"like-button-#{portfolio.id}") do %>
    <i class="fa fa-heart" aria-hidden="true"></i>
   <% end %>
<% else %>
   <%= link_to(portfolio_like_path(portfolio), method: :post, remote: true, id: :"like-button-#{portfolio.id}") do %>
   <i class="fa fa-heart-o" aria-hidden="true"></i>
   <% end %>
<% end %>
