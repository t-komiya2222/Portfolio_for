<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Portfolio for ...", root_url, id: "logo", data: {"turbolinks" => false} %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
            <%= link_to new_portfolio_path do %>
              <i class="fa fa-plus" aria-hidden="true"></i>投稿する
            <% end %>
          </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-user-circle" aria-hidden="true"></i>
              <%= current_user.name %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "マイページ", current_user %></li>
                <li><%= link_to "下書き一覧", confirm_portfolios_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "ログアウト", logout_path(@user), method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
