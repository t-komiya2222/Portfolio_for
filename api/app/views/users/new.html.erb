<h1>ユーザー登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :アバター %>
      <%= f.file_field :avatar %>

      <%= f.label :ユーザー名 %>
      <%= f.text_field :name %>

      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.label :パスワード再入力, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :プロフィール　※120文字まで %>
      <%= f.text_area :profile %>

      <%= f.submit "登録する", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
